{% extends 'default/base_layout.html.twig' %}

{% block body %}

{% stylesheets '@AloneBundle/Resources/public/css/*' filter='cssrewrite' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
{% endstylesheets %}

<div id="alone_wrapper">

<div class="alone_tab">
	<div class="alone_icons_position">
		<a class="alone_icon" target="_blank" href="https://www.artstation.com/ghdev"><span class="fab fa-artstation"></span></a>
		<a class="alone_icon" target="_blank" href="https://twitter.com/AloneDevelopers"><span class="fab fa-twitter"></span></a>
		<a class="alone_icon" target="_blank" href="https://www.youtube.com/channel/UCwFT6RfDcC21jE-QhYxCt5g"><span class="fab fa-youtube"></span></a>
	</div>
